%html
  %head
    %title TicketFast Manager
    =stylesheet_link_tag 'http://yui.yahooapis.com/2.5.2/build/datatable/assets/skins/sam/datatable.css'
    =stylesheet_link_tag 'http://yui.yahooapis.com/2.5.1/build/reset-fonts-grids/reset-fonts-grids.css'
    =stylesheet_link_tag 'http://yui.yahooapis.com/2.5.2/build/calendar/assets/skins/sam/calendar.css'
    =stylesheet_link_tag 'site.css'
    =stylesheet_link_tag 'lightbox'
    =javascript_include_tag "http://yui.yahooapis.com/combo?2.5.2/build/yahoo-dom-event/yahoo-dom-event.js&2.5.2/build/connection/connection-min.js&2.5.2/build/element/element-beta-min.js&2.5.2/build/datasource/datasource-beta-min.js&2.5.2/build/datatable/datatable-beta-min.js&2.5.2/build/json/json-min.js&2.5.2/build/calendar/calendar-min.js"
    =javascript_include_tag ['prototype', 'effects', 'dragdrop', 'controls', 'builder', 'lightbox', 'application'] + @js_includes, :cache => false
  %body
    #doc4
      #hd
        = link_to "Tickets", :controller => "tickets" 
        \-
        = link_to "Manage Events", :controller => "events", :action => "manage"
        = "(#{Event.count(:conditions => "name = '' OR name IS NULL")})"
        \-
        = link_to "Manage Venues", :controller => "venues", :action => "manage" 
        \-
        = link_to "Tickets Queue", :controller => "tickets", :action => "view_queue" 
        = "(#{Ticket.unparsed.count})"
        \-
        = link_to "Ticketmaster Accounts", :controller => "tm_accounts", :action => "index" 
        \-
        Total tickets: 
        = Ticket.count
        %br/
        %br/
        = flash[:success] + "<br /><br />" if flash[:success]
      #bd
        =yield
